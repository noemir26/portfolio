<% data.projects.each do |project| %>
  <div class="horizontal-scrolling">
    <div class="custom-prev-arrow">
      <i class="fa-solid fa-chevron-left" style="color: #fcfcfc;"></i>
    </div>
    <div class="card-product" style="background-color: <%= project.bg || "#222222"%>">
      <%= image_tag project.image, alt: "project image" %>
      <div class="card-product-infos">
        <div class="d-flex justify-content-center align-items-center">
          <h1><%= project.name %></h1>
          <% link_to project.url, class: 'external-link', target: '_blank' do %>
            <i class="fa-solid fa-arrow-up-right-from-square" style="color: #fcfcfc;"></i>
          <% end %>
        </div>
        <p><%= project.description %></p>
      </div>
    </div>
    <div class="custom-next-arrow">
      <i class="fa-solid fa-chevron-right" style="color: #fcfcfc;"></i>
    </div>
  </div>
<% end %>
