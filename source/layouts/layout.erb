<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "Portfolio" %></title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.1.2/css/all.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullPage.js/2.6.6/jquery.fullPage.css">
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
  </head>

  <body>
    <div id="fullpage">
      <section class="vertical-scrolling"  id="section1">
        <div class="text-block d-flex justify-content-center align-items-center">
          <span class="animated">
            <%= partial 'partials/banner' %>
          </span>
          <div class="scroll-down">
            <p>
              <i class="fa-solid fa-chevron-down" style="color: #fcfcfc;"></i>
            </p>
          </div>
        </div>
      </section>
      <section class="vertical-scrolling" id="section2">
          <span class="animated">
            <%= partial 'partials/about' %>
          </span>
      </section>
      <section class="vertical-scrolling" id="section3">
        <div class="text-block">
          <h1 id="word-projects">Projects</h1>
        </div>
      </section>
      <%= partial 'partials/projects' %>
      <section class="vertical-scrolling" id="section4">
        <div class="text-block">
          <h1>Random</h1>
        </div>
      </section>
      <section class="vertical-scrolling" id="section5">
        <%= partial 'partials/contact' %>
      </section>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fullPage.js/2.6.6/jquery.fullPage.min.js"></script>
    <script>
      $('#fullpage').fullpage({
        sectionSelector: '.vertical-scrolling',
        // slideSelector: '.horizontal-scrolling',
        // controlArrows: false
      });

      // Previous Arrow Click Handler
      $('.custom-prev-arrow').click(function() {
        $.fn.fullpage.moveSlideLeft();
      });

      // Next Arrow Click Handler
      $('.custom-next-arrow').click(function() {
        $.fn.fullpage.moveSlideRight();
      });
    </script>
  </body>
</html>
